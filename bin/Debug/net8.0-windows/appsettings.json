{
    "Database": {
        "ConnectionString": "Data Source=hl7_messages.db;Version=3;"
    },
    "HL7Listener": {
        "Port": 5555
    },
    "ValidationRules": {
        "MinFieldsPerSegment": {
            "MSH": 12,
            "PID": 9,
            "OBX": 6,
            "ORC": 4
        },
        "RequiredFields": {
            "MSH": [ 1, 9, 10 ],
            "PID": [ 3, 5, 7, 8 ]
        }
    },
    "AlertSettings": {
        "Enabled": true,
        "SmtpServer": "smtp.gmail.com",
        "Port": 587,
        "Username": "your-email@gmail.com",
        "Password": "your-app-specific-password",
        "Recipient": "recipient@example.com"
    }
}